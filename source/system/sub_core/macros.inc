; ------------------------------------------------------------------------------
; Define a file engine function
; ------------------------------------------------------------------------------
; PARAMETERS:
;	\1 - ID constant name
;	\2 - Function name
; ------------------------------------------------------------------------------

__func_id set 0
func macro
	xdef \1
	\1:		equ __func_id
	__func_id:	set __func_id+1
	dc.w	(\2)-Functions
	endm

; ------------------------------------------------------------------------------
; Define a file engine operation
; ------------------------------------------------------------------------------
; PARAMETERS:
;	\1 - ID constant name
;	\2 - Operation name
; ------------------------------------------------------------------------------

__oper_id set 0
oper macro
	xdef \1
	\1:		equ __oper_id
	__oper_id:	set __oper_id+1
	dc.w	(\2)-Operations
	endm

; ------------------------------------------------------------------------------
