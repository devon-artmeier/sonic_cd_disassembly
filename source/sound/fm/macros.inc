; Define sound effect
; ------------------------------------------------------------------------------
; PARAMETERS:
;	\1 - ID constant name
;	\2 - Sound effect label
;	\3 - Priority
; ------------------------------------------------------------------------------

__sfx_id    set FM_START
sfx macro
	xdef \1
	section data_sfx_index
	dw	\2
	section data_sfx_priorities
	ifge \3
		db	\3
	endif
	\1:		equ __sfx_id
	__sfx_id:	set __sfx_id+1
	endm

